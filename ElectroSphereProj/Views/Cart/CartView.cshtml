@using ElectroSphereProj.ViewModel
@model ElectroSphereProj.ViewModel.CartViewModel
<header id="navbar-electro-header" class="p-0">
    <!-- MAIN CONTAINER -->
    <div id="navbar-electro" class="mt-0">
        <!-- SHOP NAME -->
        <div id="shopName"><a href="/Dashboard/Dashboardpage"> <b>Electro</b>Sphere </a></div>
    </div>
</header>
<div id="cartMainContainer">
    <h1> Checkout </h1>
    <h3 id="totalItem"> Total Items: @Model.totalItems </h3>

    <div id="cartContainer">
        <div id="boxContainer">
            @foreach (cartItem item in Model.cartItems)
            {

                string temp = !string.IsNullOrEmpty(item.itemImg) ? "/" +
                item.itemImg :
                "https://assets.myntassets.com/h_1440,q_100,w_1080/v1/assets/images/10122083/2019/6/24/e533a691-3908-41b0-8307-1928a37d4ec41561362162650-Samsung-Galaxy-Fit-4801561362161527-1.jpg";
                <div id="box"><img src=@temp>
                    <h3>@item.itemName × @item.itemQun</h3>
                    <h4>Amount: Rs @item.itemPrice</h4>
                </div>
            }
