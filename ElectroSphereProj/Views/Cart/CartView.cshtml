            <div id="total">
                <h2>Total Amount</h2>
                <h4>Amount: Rs @Model.Totalamount.ToString("F2")</h4>
                <form action="/Payment/InitiatePayment">
                    <input type="hidden" name="amount" value="@Model.Totalamount" />
                   <div id="button"><button type="submit" style="color: white;">Place Order</button></div>
                </form>
            </div>
        </div>
